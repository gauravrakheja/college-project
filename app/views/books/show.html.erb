
<h2 align="center"><%= @book.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h3 align="center">Author: <%= @book.author %></h3>
	<h3 align="center">Publication: <%= @book.publication %></h3>
	<h4 class="center description"><strong>Description: </strong></h4>
	<hr>
	<%= simple_format(@book.description) %>
	<% if @book.users %>
		<% @book.users.each do |user| %>
			<span>Book currently borrowed by <%= user.username %></span>
		<% end %>
	<% end %>
	<div class="book-actions">
		<% if admin? %>
			<%= link_to "Edit this Book", edit_book_path(@book), class: "btn btn-xs btn-primary" %><br/><br/>
			<%= link_to "Delete this Book", book_path(@book), method: :delete, data: {confirm: "Are you sure you want to delete this book?"}, class: "btn btn-xs btn-danger" %><br/><br/>
		<% end %>
		<% if current_user %>
			<% if @book.users.empty? %>
				<%= render "borrows/form", book:  @book %><br/>
			<% end %>
		<% end %>
		<%= link_to "View all Books", books_path, class: "btn btn-xs btn-success" %>
	</div>
</div>