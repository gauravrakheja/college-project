
<h2 align="center"><%= @book.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<% if @book.user %>
		<ul class="listing">
			<div class="row center">
				<div class="col-md-4 col-md-offset-4">
					<li>Lent by: </li>
					<li><%= link_to @book.user.username, user_path(@book.user) %></li>
					<li><small><%= pluralize(@book.user.books.count, "book") if @book.user.books %></small></li>
				</div>
			</div>
		</ul>
	<% end %>
	<h3 align="center">Author: <%= @book.author %></h3>
	<h3 align="center">Publication: <%= @book.publication %></h3>
	<h4 class="center description"><strong>Description: </strong></h4>
	<hr>
	<%= simple_format(@book.description) %>
	<div class="book-actions">
		<% if logged_in? && current_user == @article.user %>
		<%= link_to "Edit this Book", edit_book_path(@book), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete this Book", book_path(@book), method: :delete, data: {confirm: "Are you sure you want to delete this book?"}, class: "btn btn-xs btn-danger" %>
		<%= link_to "View all Books", books_path, class: "btn btn-xs btn-success" %>
		<% end %>
	</div>
</div>