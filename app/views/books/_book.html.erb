<% obj.each do |book| %>
	<div class ="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="well well-lg">
				<div class="book-name">
					<%= link_to book.name, book_path(book) %>
				</div>
				<div class="book body">
					<%= truncate(book.description, length: 100) %><br />
						<small>Available</small>
				</div>
				<div class="book-actions">
					<%= link_to "Edit this book", edit_book_path(book), class: "btn btn-xs btn-primary" %><br/><br/>
					<% if current_user %>
						<%= render "borrows/form", book:  book %><br/>
					<% end %>
					<%= link_to "Delete this book", book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?"}, class: "btn btn-xs btn-danger" %> 
				</div>
			</div>
		</div>
	</div>
<% end %>