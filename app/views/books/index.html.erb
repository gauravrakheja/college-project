<h1>Listing All books</h1>
<p>
<%= link_to "Create new Book", new_book_path %>
</p>
<table>
	<tr>
		<th>Name: </th>
		<th>Author: </th>
		<th>publication: </th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.name %></td>
			<td><%= book.author  %></td>
			<td><%= book.publication %></td>
			<td><%= link_to "delete", book_path(book), method: :delete, data: {confirm: "Are you sure you want to delete this book?"} %></td>
		</tr>
	<% end %>
</table>