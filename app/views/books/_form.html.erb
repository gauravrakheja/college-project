<% if @book.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
<% @book.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @book do |f| %>
	<p>
	<%= f.label :name %><br/>
	
	<%= f.text_field :name %>
	</p>
	<p>
	<%= f.label :author %><br/>
	
	<%= f.text_field :author %>
	</p>
	<p>
	<%= f.label :publication %><br/>
	
	<%= f.text_field :publication %>
	</p>
	<p>
	<%= f.label :description %><br/>
	
	<%= f.text_area :description %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>
<%= link_to "Back to Books listing", books_path %>