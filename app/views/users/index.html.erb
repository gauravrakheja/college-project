<h1 align="center">All Registered Library Users</h1>
<div align="center">
<% @users.each do |user| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li class="book name"><%= link_to user.username, user_path(user) %></li>
				<li><small><%= pluralize(user.books.count, "book") if user.books %></small></li>
			</div>
		</div>
	</ul>
</div>
<% end %>